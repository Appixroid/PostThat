<synth>
	<style id="postit">
		<state>
			<color value="#fff176" type="BACKGROUND"/>
			<color value="BLACK" type="FOREGROUND"/>
			<insets top="2" left="2" right="2" bottom="2"/>
		</state>
	</style>
	
	<style id="content">
		<state>
			<insets top="4" left="4" right="4" bottom="4"/>
		</state>
	</style>
	
	<bind style="postit" type="region" key="InternalFrame"/>
	<bind style="content" type="region" key="TextArea"/>
</synth>